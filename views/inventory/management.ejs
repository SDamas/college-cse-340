<section id="management-container">
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <div id="management-actions">
    <a href="/inv/add-classification">Add classification</a>
    <a href="/inv/add-inventory">Add inventory</a>
  </div>

  <h2>Manage Inventory</h2>
  <p>Select a classification to see the inventory items.</p>
  
  <%- classificationList %>

  <table id="inventoryDisplay"></table>

  <noscript>JavaScript must be enabled to use this page.</noscript>
</section>

<script src="../../js/inventory.js"></script>