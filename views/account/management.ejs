<section id="account-management-container">
<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2 id="welcome-message">Welcome, <%= locals.accountData.account_firstname %></h2>
<div class="action">
  <h3>Update Account Information</h3>
  <p>Update your account information <a href="/account/update"><b><u>here</u></b></a></p>
</div>
<% if (locals.accountData.account_type == 'Employee' || locals.accountData.account_type == 'Admin') { %>
  <div class="action">
    <h3>Inventory Management</h3>
    <p>Access the inventory management <a href="/inv/management"><b><u>here</u></b></a></p>
  </div>
<% } %>
</section>